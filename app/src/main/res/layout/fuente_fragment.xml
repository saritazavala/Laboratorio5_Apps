<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/anadir">

        <TextView
                android:text="Ingrese nombre del Producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nuevoNom" android:textStyle="bold"
                android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="80dp" android:layout_marginStart="76dp" android:textAlignment="center"/>
        <TextView
                android:text="Ingrese el codigo del producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NuevoId" android:textSize="20sp"
                android:fontFamily="sans-serif-black" app:layout_constraintStart_toStartOf="@+id/iN"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/iN"
                android:textAlignment="center"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/iN"
                android:textColor="@android:color/darker_gray" app:layout_constraintStart_toStartOf="@+id/nuevoNom"
                app:layout_constraintTop_toBottomOf="@+id/nuevoNom" android:layout_marginTop="12dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/iC"
                android:textColor="@android:color/darker_gray" app:layout_constraintStart_toStartOf="@+id/NuevoId"
                app:layout_constraintTop_toBottomOf="@+id/NuevoId" android:layout_marginTop="16dp"/>
        <Button
                android:text="Añadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Añadir"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="356dp"
                app:layout_constraintHorizontal_bias="0.894"/>
    </android.support.constraint.ConstraintLayout>
</layout>